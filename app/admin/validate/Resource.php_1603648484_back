namespace app\admin\validate;

use think\Validate;

class Resource extends Validate
{
    protected $rule = [
        'title|标题' => [
            'require' => 'require',
        ],
        'cate_id|栏目' => [
            'require' => 'require',
        ],
        'status|状态' => [
            'require' => 'require',
            'max' => '1',
        ],
        'contents|资源内容' => [
            'require' => 'require',
        ]
    ];
}