namespace app\admin\validate;

use think\Validate;

class orders extends Validate
{
    protected $rule = [
        'sort|排序' => [
            'require' => 'require',
            'max' => '8',
            'number' => 'number',
        ],
        'status|状态' => [
            'require' => 'require',
            'max' => '1',
        ],
        'order_id|订单ID' => [
            'require' => 'require',
        ],
        'price|订单价格' => [
            'require' => 'require',
        ],
        'payment|支付方式' => [
            'require' => 'require',
        ]
    ];
}